doctype html
html
  head
    meta(charset='utf-8')
    title SOUND Roster
    script.
      var $__IDENTITY = !{identity};
    style.
      body {
        margin: 0;
        padding: 0;

        font-family: 'Helvetica Neue', 'Calibri', Arial, sans-serif;
        font-size: 16px;

        background: #202020;
        color: #CDCDCD;
      }

      input, button {
        font-family: 'Helvetica Neue', 'Calibri', Arial, sans-serif;
      }

      a {
        color: #7cbce4;
      }

      a:visited {
        color: #9b82f7;
      }

      .roster-btn {
        border: 1px solid #694e3e;
        background: #48352B;
        box-shadow: inset 0 0 8px #694938;

        color: #cdcdcd;
        font-size: 14px;

        transition: background 250ms cubic-bezier(0.215, 0.610, 0.355, 1);
      }

      .roster-btn:hover {
        border-color: #715544;
        background: #4c392e;
      }

      .roster-btn:active {
        color: #9a9a9a;
        border-color: #5a4436;
        background: #382b24;
        box-shadow: inset 0 0 8px #5d4031;
      }

      .roster-btn:focus {
        outline: none;
      }

      .roster-btn.secondary {
        background: #2f2f2f;
        box-shadow: inset 0 0 8px #404040;
        border-color: #4c4c4c;
        color: #b4b4b4;
      }

      .roster-btn.secondary:hover {
        border-color: #585858;
        background: #343434;
      }

      .roster-btn.secondary:active {
        color: #9a9a9a;
        border-color: #404040;
        background: #232323;
        box-shadow: inset 0 0 8px #303030;
      }

  body
    #app
      keep-alive
        router-view(
            'v-if'='$route.meta.keepAlive'
            ':identity'='identity'
            )
      router-view(
          'v-if'='!$route.meta.keepAlive'
          ':identity'='identity'
          )
