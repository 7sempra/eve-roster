{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "tasks":[
    {
      "taskName": "watch-server",
      "command": "npm",
      "args": ["run", "watch-server"],
      "isShellCommand": true,
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "taskName": "build-server",
      "command": "npm",
      "args": ["run", "build-server"],
      "isShellCommand": true,
      "isBuildCommand": true,
      "problemMatcher": "$tsc",
      "showOutput": "silent"
    }
  ]
}
